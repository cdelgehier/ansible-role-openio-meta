# {{ ansible_managed }}
[Service.{{ openio_meta_namespace }}-{{ service_type }}-{{ openio_meta_serviceid }}]
command=/usr/bin/oio-{{ service_type }}-server -p /run/oio/sds/{{ openio_meta_namespace }}-{{ service_type }}-{{ openio_meta_serviceid }}.pid -s OIO,{{ openio_meta_namespace }},{{ service_type }},{{ openio_meta_serviceid }} -O Endpoint={{ openio_meta_bind_address }}:{{ service_port }}  -O Config=/etc/oio/sds/{{ openio_meta_namespace }}/{{ service_type }}-{{ openio_meta_serviceid }}/{{ service_type }}-{{ openio_meta_serviceid }}.conf {{ openio_meta_namespace }} {{ openio_meta_volume }}
enabled=true
start_at_boot=true
on_die=respawn
group={{ openio_meta_namespace }},{{ service_type }},{{ openio_meta_serviceid }}
uid=openio
gid=openio
env.PATH=/usr/local/bin:/usr/bin:/usr/local/sbin:/usr/sbin
